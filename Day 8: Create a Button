button.css
#btn{
    width:96px;
    height:48px;
    font-size:24px;
}
---------------------------------------------------------------------------------------------------------------------------------------------------------------
index.html
<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="css/button.css" type="text/css">
    </head>
    
    <body>
        <script src="js/button.js" type="text/javascript"></script>
        <button id = "btn" onclick = "myFunction()" value="1">0</button>
    </body>
</html>
---------------------------------------------------------------------------------------------------------------------------------------------------------------
button.js
function myFunction(){
    var count = parseInt(document.getElementById("btn").value);
     document.getElementById("btn").value = count + 1;
     document.getElementById("btn").innerHTML = count;
}
